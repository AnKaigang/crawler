    <groupId>cn.akgang</groupId>
    <artifactId>crawler</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>juliweb</module>
    </modules>
    <name>crawler</name>
    <url>http://maven.apache.org</url>
    <properties>
        <spring-verison>5.0.0.RELEASE</spring-verison>
        <spring-security-verison>4.2.3.RELEASE</spring-security-verison>
        <jackson-verison>2.9.2</jackson-verison>
